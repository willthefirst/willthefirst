{{!< default}}

{{! Everything inside the #post tags pulls data from the post }}
{{#post}}
<div class="container">
  <div class="navigation">
    <h1 class="site-name"><a href="{{@blog.url}}">{{@blog.title}}</a></h1>
    {{navigation}}
  </div>
  <div class="content box" role="main">
      {{content}}
  </div>
</div>
{{/post}}
