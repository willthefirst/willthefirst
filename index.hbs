{{!< default}}
<div class="container">
  <div class="navigation box">
    <!-- {{#if @blog.logo}}
    <a href="{{@blog.url}}" class="site-logo">
      <img src="{{@blog.logo}}" class="site-logo-img" alt="{{@blog.title}}" />
    </a>
    {{/if}} -->
    <h1 class="site-name"><a href="{{@blog.url}}">{{@blog.title}}</a></h1>
    {{navigation}}
  </div>
  <div class="content box" role="main">
    {{#is "home"}}
      {{#foreach posts}}
        {{#if featured}}
          <article class="{{post_class}}">
            {{content}}
          </article>
        {{/if}}
      {{/foreach}}
    {{else}}
      {{> "loop"}}
    {{/is}}
  </div>
</div>
