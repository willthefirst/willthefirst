{{!< default}}
<div class="container">
  <div class="navigation box">
    <h1 class="site-name"><a href="{{@blog.url}}">{{@blog.title}}</a></h1>
    {{navigation}}
  </div>
  <div class="content box" role="main">
    {{!-- If home, display the 'featured' post --}}
    {{#is "home"}}
      {{#foreach posts}}
        {{#has tag="homepage"}}
          {{content}}
        {{/has}}
      {{/foreach}}
    {{!-- Display excerpts for any other tag page --}}
    {{else}}
    <div class="card-flex">
      {{> "loop"}}
    </div>
    {{/is}}
  </div>
</div>
